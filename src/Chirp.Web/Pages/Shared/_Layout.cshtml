<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1>
        <img src="/images/icon1.png" alt="Icon1" id="Icon1" onclick="location.href='/'"/>
        <a id="chirptitle">Chirp!</a>
    </h1>

    <partial name="_LoginPartial" />

    <div class=body>
        @RenderBody()
    </div>

    <div class=footer>
        <div class="pagination-footer">
            <div class="pagination-controls">
                <a class="first-page"><<</a>
                <a class="previous-page">Previous Page</a>
                <div class="page-indicator"></div>
                <a class="next-page">Next Page</a>
                <a class="last-page">>></a>
            </div>
            <div class="page-field-container">
                Enter page: <
                <input class="page-field"/>
                >
            </div>
        </div>
        <div>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>
</div>
<video autoplay loop id="bg-video" style="pointer-events: none;">
    <source src="" id="bg-source"/>
</video>
</body>
<script src="../js/script.js" type="text/javascript"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
